{% extends 'FlexyFtwoStoreBundle:Layout:base.html.twig' %}
{% block title %}Quote{% endblock %}
{% set quoteVariables = flexy_ftwo_quote_list() %}
{% set quoteUrl = path('flexy_ftwo_store_quote_finish') %}
{% block content %}
<section>
    <form id="quoteForm" method="post" action="{{ quoteUrl }}" class="f2-form">
        <div class="second-page-container">
            <div class="container">
                {% include 'FlexyFtwoStoreBundle:Include:breadcrumbs.html.twig' with {path : [{'title' : 'Orçamento' }]} %}
                {% for flashMessage in app.session.flashbag.get('store-error') %}
                    <div class="alert alert-danger">
                        {{ flashMessage|trans }}
                    </div>
                {% endfor %}
                <div class="header-for-light">
                    <h1 class="wow fadeInRight animated animated" data-wow-duration="1s" style="visibility: visible;-webkit-animation-duration: 1s; -moz-animation-duration: 1s; animation-duration: 1s;">
                        Orçamento
                    </h1>
                </div>
                <div class='ml-1 mr-1 mb-3'>
                    <h4 class='ml-1 mr-1 mb-3'>Que tipo de produto ou serviço deseja cotar?</h4>
                    <iframe width="100%" height="840px" src="https://liigo-orcamento.herokuapp.com/" title="Orçamento" frameborder="0" scrolling="no"></iframe>
                    <hr>
                    <h4 class='ml-1 mr-1 mb-3'>Faça uma breve descrição do que procura:</h4>
                    <textarea class="form-control ml-3 mr-4 pr-3" rows=5 placeholder="Descreva o produto ou serviço que procura..."></textarea>
                    <div class="ml-1 mr-1 mb-3 f2-product-attributes">
                        <hr>
                        <h4 class="ml-1 mb-3 control-label" for="attributeValues[Servico]">Enviar arquivo:</h4>
                        <div class="ml-3 f2-product-attribute" id="f2-product-attribute-Servico">
                            <input class="form-control" type="file" id="f2_order_attribute_Servico" name="attributeValues[Servico]">
                            <!-- <span id="helpBlock-Servico" class="hidden help-block">Este é um campo de preenchimento obrigatório.</span> -->
                        </div>
                        <hr>
                    </div>
                    <div class="ml-1">
                        <input class="ml-1" type="checkbox" required>
                        <span>Aceito compartilhar meus dados com os fornecedores para que entrem em contato.</span>
                    </div>
                </div>
                {% set hasOrphanSale = quoteVariables.quote.hasOrphanSale %}
                {% set hasNoOrphanSale = not hasOrphanSale %}
                {% set quotes = quoteVariables.quotes %}
                {% include 'FlexyFtwoStoreBundle:Include/Cart:cart-list.html.twig' with {carts : quotes, changeQuantity : true, remove: true} %}
                <div class="row">
                    {% if hasOrphanSale %}
                    <div class="col-md-4">
                        <div class="row">
                            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="block-form box-border wow fadeInLeft" data-wow-duration="1s">
                                    <h3><i class="fa fa-truck"></i> CEP de entrega</h3>
                                    <hr/>
                                    {% if not hasNoOrphanSale %}
                                        É necessário preencher o CEP de entrega antes de solicitar o orçamento.
                                    {% endif %}
                                    <div class="input-group">
                                        <input type="text" class="flexy-input-postcode form-control" name="zipCode" placeholder="Digite seu cep" value="{{ app.request.get('zipCode') }}">
                                        <span class="input-group-btn">
                                            <input type="button" class="btn btn-default-1 btn-cep" value="Enviar" />
                                        </span>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>
                    <div class="col-md-8"></div>
                    {% endif %}
                    <div class="col-md-12 text-right">
                        {% if flexy_ftwo_current_user_exists() and hasNoOrphanSale %}
                            <a href="{{ path('flexy_ftwo_store_quote_export', { 'quoteId' : quoteVariables.quote.id}) }}" class="btn btn-default pull-left">
                                <i class="fa fa-shopping-quote"></i> Imprimir orçamento
                            </a>
                        {% endif %}
                        {% if hasNoOrphanSale %}
                        <button onclick="quoteFormSubmit()" class="btn btn-checkout btn-light-blue">
                            <i class="fa fa-shopping-quote"></i> Solicitar orçamento
                        </button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
crossorigin="anonymous"></script>
<script>
    var shoppingStoreList = []
    $(document).ready(function() {
        window.addEventListener('message', event => {
            //console.log("Event data:")
            console.log(event.data);
            shoppingStoreList = event.data
        });
    })
</script>
<script>
    function quoteFormSubmit() {
        console.log(shoppingStoreList)
        if (Array.isArray(shoppingStoreList)) {
            for (shoppingStore of shoppingStoreList) {
                $.ajax({
                    url: "/quote/add",
                    type: "post",
                    dataType: "json",
                    data: {
                        id: "1572",
                        quantity: 1,
                        additionalVariantId: [],
                        distributionCenter: shoppingStore,
                        attributeValues: {}
                    },
                    beforeSend: function() {
                        console.log("Before!")
                    },
                    success: function(e) {
                        console.log("Success!")
                    },
                    error: function(e) {
                        console.log("Error!")
                        console.log(e)
                    }
                })
            }
        }
        $.post('{{ quoteUrl }}')
    }
</script>
{% endblock %}
